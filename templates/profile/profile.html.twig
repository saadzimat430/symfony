<!DOCTYPE html>
<html lang="en">

<title>Profil</title>

<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">


<!------ Include the above in your HEAD tag ---------->
<p></p>
<p></p>
<p></p>
<p></p>
{% block main %}
    <div class="container emp-profile">
                <form method="post">
                    <p></p>
                    <p></p>

                    <div class="row">
                        

                        <div class="col-md-4">
                            
                                <img src="https://image.flaticon.com/icons/png/128/149/149071.png" alt="VOTRE PHOTO"/>
                                
                            
                        </div>
                        <div class="col-md-6">
                            <div class="profile-head">
                                        <h5>
                                            Nom et Prénom: 
                                            {% if is_granted(['ROLE_USER']) %}
                                                {{ user.fullname }}
                                            {% endif %}
                                        </h5>
                                        
                                        <p class="proile-rating">Année universitaire:  2018/2019</p>
                                <ul class="nav nav-tabs" id="myTab" role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">A propos </a>
                                    </li>
                                    
                                    
                                </ul>
                            </div>
                        </div>
                        
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="profile-work">
                                <p>MON PARCOURS </p>
                                <p><span style="text-decoration: underline;">Thèse:</span>  {{ user.these }}</p><br/>
                                <p></p>
                                <p><span style="text-decoration: underline;">Mon volume horaire:</span><span> {{ user.nombreHeures }} heures</p><br/>
                                <p></p>
                                <p>MA SOUTENANCE </p>
                                <a href="">A propos de la soutenance</a><br/>
                                <a href="http://localhost:81/cedoc/templates/upload2.php">Déposer une demande de soutenance</a><br/>
                                <a href="http://localhost:81/cedoc/templates/upload.php">Déposer un rapport </a><br/> 
                                <p></p>
                                <p></p>
                                <a href="logout">Se déconnecter </a><br/> 
                            </div>
                        </div>
                        
                            <div class="col-md-8">
                                <div class="tab-content profile-tab" id="myTabContent">
                                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                                            <p></p>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <label>Identifiant : </label>
                                                    {% if is_granted(['ROLE_USER']) %}
                                                        {{ user.id }}
                                                    {% endif %}
                                                </div>
                                                <div class="col-md-6">
                                                    <p></p>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <label>Adresse email : </label>
                                                    {% if is_granted(['ROLE_USER']) %}
                                                        {{ user.email }}
                                                    {% endif %}
                                                </div>
                                                <div class="col-md-6">
                                                    <p></p>
                                                </div>
                                            </div>
                                            {{ form_start(form) }}
                                                {{ form_widget(form) }}
                                                <button class="btn btn-lg btn-primary btn-block" type="submit">
                                                    Enregistrer les modifications
                                                </button>
                                            {{ form_end(form) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                </form>           
            </div>
{% endblock %}

